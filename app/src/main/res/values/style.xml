<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14dp</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="myButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lao_black</item>
    </style>

</resources>