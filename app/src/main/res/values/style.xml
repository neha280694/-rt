<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14dp</item>
        <item name="colorAccent">@color/colorAccent1</item>
        <item name="colorControlNormal">@color/colorAccent1</item>
        <item name="colorControlActivated">@color/colorAccent1</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="myButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lao_black</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimaryDark
        </item>
    </style>

        <!-- Custom style for EditText without underline -->
    <style name="EditTextNoUnderline">
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!--This is the Tooltip textAppearance -->
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
        <!--This is the Tooltip Background Color -->
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <!--This is the Tooltip Text Color -->
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SliderTheme" parent="Widget.MaterialComponents.Slider">
        <!-- Add attributes here -->

        <item name="trackColorActive">@color/colorAccent</item>
        <item name="trackColorInactive">@color/colorAccent1</item>
        <item name="tickColor">@color/colorAccent1</item>

        <item name="thumbColor">@color/colorAccent</item>

    </style>

</resources>