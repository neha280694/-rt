<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DASHBOARD"
                android:textColor="@color/white"
                android:textStyle="bold"></TextView>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"

            android:orientation="vertical"
            android:layout_height="120dp"
           >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border1"
       >

        <LinearLayout
            android:id="@+id/usrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border1"


            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="72dp"

            android:paddingTop="10dp"
            app:srcCompat="@drawable/man">

        </ImageView>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"


            android:text="USER DATA"></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
           android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"

            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

            >
                <LinearLayout
                    android:id="@+id/weatherd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border1"

                    android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/calr">

                </ImageView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:text="CALCULATOR"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="120dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border1"

                    android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/room">

                </ImageView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="BOOK YOUR ROOM"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
           android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="120dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border1"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/bicycle">

                    </ImageView>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="BOOK YOUR RIDE"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:layout_height="120dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border1"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/ticket">

                    </ImageView>
                    <TextView
                        android:id="@+id/serverd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="BOOK YOUR SHOW"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="120dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:id="@+id/loanemi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border1"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/calculations">

                    </ImageView>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="CALCULATE YOUR EMI"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>
